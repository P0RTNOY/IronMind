PROJECT_ID=iron-mind-dev
ENV=dev
FRONTEND_ORIGIN=http://localhost:5173
ADMIN_UIDS=replace_with_comma_separated_uids

STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_FUNDAMENTALS_ONE_TIME=price_...
STRIPE_PRICE_ID_MEMBERSHIP_MONTHLY=price_...

CURRENCY_DEFAULT=ils # Note: Currency is controlled by the Stripe Price object.
APP_VERSION=0.0.1

# Email (set RESEND_API_KEY for production)
RESEND_API_KEY=

# Payments (Phase 0: stub provider, firestore repos)
# Tests use: PAYMENTS_PROVIDER=stub PAYMENTS_REPO=memory
PAYMENTS_PROVIDER=stub
PAYMENTS_REPO=firestore

# PayPlus (Phase 1 — set PAYMENTS_PROVIDER=payplus to activate)
# For sandbox: use restapidev.payplus.co.il credentials
PAYPLUS_ENV=sandbox
PAYPLUS_API_KEY=
PAYPLUS_SECRET_KEY=
PAYPLUS_PAYMENT_PAGE_UID_ONE_TIME=
PAYPLUS_PAYMENT_PAGE_UID_SUBSCRIPTION=
PAYPLUS_WEBHOOK_VERIFY_MODE=enforce
PAYPLUS_TIMEOUT_SECONDS=15
# Publicly reachable URL for PayPlus callbacks (use ngrok for local dev)
PUBLIC_WEBHOOK_BASE_URL=http://localhost:8080

# Content Protection (Phase 2 — signed download URLs)
SIGNED_URL_TTL_SECONDS=900

# Video Protection (Phase 2.5/2.6)
VIDEO_PROVIDER=vimeo
VIMEO_EMBED_BASE_URL=https://player.vimeo.com/video
ALLOWED_EMBED_ORIGINS=http://localhost:5173,http://localhost:3000

# Vimeo Privacy Verification (Phase 2.7)
VIMEO_VERIFY_ENABLED=false
VIMEO_ACCESS_TOKEN=your_pat_here
VIMEO_REQUIRED_EMBED_ORIGINS=ironmind.app,www.ironmind.app
